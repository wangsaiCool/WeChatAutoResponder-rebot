    ])
    my_bot.train([
        "你",
        "我知道圆周率，你知道吗？我告诉你Pi=03.14159265358979323846264338327950288419716939937510582097494459230781640628620899862803482534211706798214..."
    ])
    my_bot.train([
        "屁",
        "我知道圆周率，你知道吗？我告诉你Pi=03.14159265358979323846264338327950288419716939937510582097494459230781640628620899862803482534211706798214..."
    ])
    my_bot.train([
        "屁",
        "我知道圆周率，你知道吗？我告诉你Pi=03.14159265358979323846264338327950288419716939937510582097494459230781640628620899862803482534211706798214..."
    ])
    my_bot.train([
        "年龄",
